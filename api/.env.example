# Jarvis API Environment Configuration Example

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jarvis
DB_USER=postgres
DB_PASSWORD=your_password

# API Configuration
PORT=8080
OS=dev

# Authentication
JWT_SECRET=your_jwt_secret_key_here

# Blockchain Configuration for Invoice Verification
# Amount required for subscription (in whole tokens, e.g., 0.1 for 0.1 BTC)
SUBS_AMOUNT=0.001

# Hot wallet address where users should send payments
HOT_WALLET=bc1qxy2kgdygjrsqtzq2n0yrf2493p83kkfjhx0wlh

# Docker Configuration (if needed)
DOCKER_HOST=unix:///var/run/docker.sock